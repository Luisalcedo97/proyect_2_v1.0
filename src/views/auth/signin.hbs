<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card mt-4 bg-btn text-white rounded">
      <div class="card-header text-center pt-5">
        <h1 class="h4 text-white">
          INGRESA LA CUENTA
        </h1>
      </div>
      <img
        class="rounded-circle mx-auto d-block logo m-1"
        src="/img/logo.png"
        alt="Logo"
      />
      <div class="card-body">
        <form action="/auth/signin" method="POST">
          <div class="mb-1">
            <label for="email">Correo:</label>
            <input
              type="email"
              class="form-control bg-white text-black"
              name="email"
              placeholder="Correo"
              autofocus
            />
          </div>
          <div class="mb-3">
            <label for="passswore">Contraseña:</label>
            <input
              type="password"
              class="form-control bg-white text-black"
              name="password"
              placeholder="Contraseña"
            />
          </div>
          <button class=" btn btn-success btn-block">
            INGRESAR
          </button>
        </form>
      </div>

      <p class="text-center">No tienes una cuenta? <a href="/auth/signup" class="text-white">Registrarse</a></p>
    </div>
  </div>
</div>