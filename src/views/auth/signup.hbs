<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card bg-btn text-white">
      <div class="card-header pt-5">
        <h4 class="text-center">
          REGISTRAR CUENTA
        </h4>
      </div>
      <div class="card-body">
        <form action="/auth/signup" method="POST">
          <div class="mb-3">
            <label for="name">NOMBRE:</label>
            <input
              type="text"
              class="form-control bg-light text-dark"
              name="name"
              placeholder="Nombre"
              value="{{name}}"
            />
          </div>
          <div class="mb-3">
            <label for="email">CORREO:</label>
            <input
              type="email"
              class="form-control bg-light text-dark"
              name="email"
              placeholder="Correo"
              value="{{email}}"
            />
          </div>
          <div class="mb-3">
            <label for="password">CONTRASEÑA</label>
            <input
              type="password"
              class="form-control bg-light text-dark"
              name="password"
              placeholder="Contraseña"
              value="{{password}}"
            />
          </div>
          <div class="mb-3">
            <label for="confirm_password">CONFIRMAR CONOTRASEÑA:</label>
            <input
              type="password"
              class="form-control bg-light text-dark"
              name="confirm_password"
              placeholder="Confirmar Contraseña"
              value="{{confirm_password}}"
            />
          </div>
          <button class="btn btn-success btn-block">
            CREAR CUENTA
          </button>
        </form>
      </div>
      <p class="text-center">Ya tienes una cuenta?
        <a href="/auth/signin" class="text-white">Ingresar</a></p>
    </div>
  </div>
</div>